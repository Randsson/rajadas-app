<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application'%>
    <%= stylesheet_link_tag    'arquivos'%>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Login de usu√°rio </title>
  </head>

  <body class="login bg-gradient-primary"">
     
  <div class="container">
          <!-- Outer Row -->
      <div class="row justify-content-center">

          <div class="col-xl-10 col-lg-12 col-md-9">

              <div class="card o-hidden border-0 shadow-lg my-5">
                  <div class="card-body p-0">
                      <!-- Nested Row within Card Body -->
                      <div class="row">
                          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                          <div class="col-lg-6">
                              <div class="p-4">
                                  <div class="text-center">
                                      <h1 class="h4 text-gray-900 mb-4">Esqueceu a Senha?</h1>
                                  </div>
                                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                                        <div class="form-group">
                                          <%= f.email_field :email, autofocus: true, placeholder:"Informe o e-mail cadastrado", class:"form-control form-control-user" %>
                                        </div>

                                        <div class="form-group">
                                          <%= f.submit "Enviar", class:'btn btn-primary btn-user btn-block' %>
                                        </div>
                                      <hr>
                                  <% end %>
                                  <div class="text-center">
                                      <%= link_to 'Voltar', new_user_session_path, class: 'larger' %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <footer class="sticky-footer footer-index">
      <div class="container my-auto">
          <div class="copyright text-center my-auto">
              <span> &copy; GETIN/SUDEO - 2020</span>
          </div>
      </div>
  </footer>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'arquivos' %>

   <% if flash %>
    <% flash.each do |key, value| %>
      <%= javascript_tag do %>
          $.bootstrapGrowl( "<%=value%>" , {
              ele: 'body', // which element to append to
              type: 'danger', // (null, 'info', 'danger', 'success')
              offset: {from: 'top', amount: 20}, // 'top', or 'bottom'
              align: 'center', // ('left', 'right', or 'center')
              width: 250, // (integer, or 'auto')
              delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
              allow_dismiss: true, // If true then will display a cross to close the popup.
              stackup_spacing: 10 // spacing between consecutively stacked growls.
          });
      <% end %>
    <% end %>
  <% end %>
  <% unless resource.errors.empty? %>
    <% resource.errors.full_messages.each do | value| %>
      <%= javascript_tag do %>
          $.bootstrapGrowl( "<%=value%>" , {
              ele: 'body', // which element to append to
              type: 'danger', // (null, 'info', 'danger', 'success')
              offset: {from: 'top', amount: 20}, // 'top', or 'bottom'
              align: 'center', // ('left', 'right', or 'center')
              width: 250, // (integer, or 'auto')
              delay: 4000, // Time while the message will be displayed. It's not equivalent to the *demo* timeOut!
              allow_dismiss: true, // If true then will display a cross to close the popup.
              stackup_spacing: 10 // spacing between consecutively stacked growls.
          });
      <% end %>
    <% end %>
  <% end %>
  </body>
</html>


