<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @action_message %></h1>
  </div>
</div>
  
<% if @arquivo.errors.any? %>
   <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
     <ul>
      <% @arquivo.errors.full_messages.each do |error| %>
        <li> <%= error %></li>
      <%end%>
    </ul>
  </div>
<% end %>
<%= form_with(model: arquivo, local: true) do |form| %>

  <div class="field">
     <div class="form-group">
      <%= form.label :title, "Título" %>
      <%= form.text_field :title, class:"form-control" %> 
    </div>

  <div class="form-group">
    <%= form.label :body, 'Descrição' %>
    <%= form.text_field :body, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :documento, 'Arquivos:' %>
    <%# <%= form.file_field :documento, multiple: true %>
    <%= form.file_field :documento, multiple: true, class:"form-control-file" %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', class:"btn btn-primary" %>
  </div>
<% end %>
