<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Arquivos</h1>
  </div>
</div>

<div class= "table-responsive table-sm">
  <table class="table table-striped table-bordered table-hover">
    <thead class="bg-gradient-primary text-white">
      <tr>
        <th class= "">Título</th>
        <th>Descrição</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody class= "text-primary">
    <% @arquivos.each do |arquivo| %>
      <tr>
        <td><%=  arquivo.title %></td>
        <td> <%= arquivo.body %></td>

        <td>
        <%= link_to arquivo_path(arquivo), class:"btn btn-info btn-sm  " do %>
            <i class="fas fa-folder-open"></i>
        <% end %>

        <%= link_to edit_arquivo_path(arquivo), class:"btn btn-primary btn-sm"  do %>
          <i class="fas fa-file-signature"></i>
        <% end %>

        <%= link_to arquivo_path(arquivo), method: :delete, class:"btn btn-danger btn-sm ", data: {confirm: "Excluir #{arquivo.title}?"} do %>
          <i class="fas fa-minus"></i> 
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_arquivo_path, class:"btn btn-outline-primary" do %>
    <i class="fas fa-file-alt"></i> Add arquivo
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-outline-success" do %>
    <i class="fas fa-sign-out-alt"></i> Sair
  <% end %>
</div>
