<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Codigos cadastrados</h1>
  </div>
</div>

<div class= "table-responsive table-sm">
  <table class="table table-striped table-bordered table-hover">
    <thead class="bg-gradient-primary text-white">
      <tr>
        <th>Id</th>
        <th>Código</th>
        <th>Data</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody class= "text-primary">
    <% @codigos.each do |codigo| %>
      <tr>
      <td><%= codigo.id %></td>
        <td><%= link_to codigo.codigo, conta_cod_barra_index_path(:cod_leitura => codigo.codigo)%></td>
        
        <td> <%= codigo.created_at.strftime("%d/%m/%Y") %></td>

        <td>
        <%= link_to edit_codigo_path(codigo), class:"btn btn-primary btn-sm"  do %>
          <i class="fas fa-file-signature"></i>
        <% end %>

        <%= link_to codigo_path(codigo), method: :delete, class:"btn btn-danger btn-sm ", data: {confirm: "Deseja realmente excluir?"} do %>
          <i class="fas fa-minus"></i> 
        <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to new_codigo_path, class:"btn btn-outline-primary" do %>
    <i class="fas fa-file-alt"></i> Add Código
  <% end %>
</div>
